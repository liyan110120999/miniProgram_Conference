/* 内容区域 */
.content_view{
  /* background-color: #4C9978; */
  background-color: #eee;
  text-align: left;
  padding:40rpx;
  margin: 20rpx;
  border-radius: 10rpx;
}
  .content_view text{
    /* margin: 40rpx; */
    color: #333;
    font-size: 36rpx;
  }

.empty_view{
  height: 160rpx;
}
/* 底部按钮组区域 */
.button_view{
  position: fixed;
  display: flex;
  justify-content: space-between;
  bottom: 40rpx;
  left: 40rpx;
  text-align: center;
  width: 670rpx;
  height: 120rpx;
  background-color: rgba(238,238,238,0.9);
  /* box-shadow: 0px 3px 1px -2px rgba(0, 0, 0, 0.2), 0px 2px 2px 0px rgba(0, 0, 0, 0.14), 0px 1px 5px 0px rgba(0,0,0,.12); */
  box-shadow: 0 2px 5px 0 rgba(0,0,0,.26);
  border-radius: 20rpx;
}
  .buttonItem_view{
    /* background-color: antiquewhite; */
    padding: 14rpx 0 6rpx 0;
    width: 140rpx;
  }
  .buttonIcon{
    display: block;
    /* background-color: aqua; */
    font-size: 40rpx;
    line-height: 50rpx;
    color: #6FC9A2;
    font-weight: 700;
  }
  .buttonText{
    display: block;
    /* background-color: palevioletred; */
    font-size: 28rpx;
    line-height: 50rpx;
    color: #6FC9A2;
  }

