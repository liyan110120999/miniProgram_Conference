
/* banner区域 */
.banner_view{
  width: 80%;
  margin: 180rpx auto;
  text-align: center;
  /* background-color: palevioletred; */
}
.banner_view image{
  width: 100%;
}


/* 上传按钮 */
.button_view{
  margin-top: -20rpx;
  text-align: center;
}
  .uploadImg_button{
    max-width: 50%;
    margin-top: 40px;
    margin-bottom: 10px;
    border-radius: 30px;
    color: #eee;
    background:linear-gradient(#6CD9AA, #6fc9a2);
    box-shadow: 0 2px 5px 0 rgba(0,0,0,.26);
  }
  .uploadImg_button::after{
    border: none;
  }


/* 分享给好友 view */
.share_view{
  margin: 0 auto;
}
  .share_view button {
    color: #6fc9a2;
    font-weight: 100;
    font-size: 16px;
  }
  .share_view button::after{
    border: none;
  }
  .share_button_hover{
    border: none;
  }



.info_text{
  color: #4C9978;
  font-size: 16px;
}



.out_text{
  display: inline-block;
  font-size: 16px;
  color: #696969;
  width: 100%;
  text-align:center;
}


.ad_view{
  background-color: #f6f6f6;
  margin-top: 20px;
  margin-bottom: 20px;
  border-radius: 5px;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}






/* 内部广告区域 */
.jump_view{
  display: flex;
  height: 80px;
  margin: 20px;
  border-radius: 5px;
  background-color: #fff;
}
 
  .left_view{
    display: flex;
    flex: 8;
  }
    .jump_text_view{
      width: 100%;
      vertical-align: middle;
      padding: 15px 15px 15px 0;
    }
    .tip_text{
      float: right;
      margin-top: -15px;
      padding: 1px 4px;
      border-bottom-left-radius: 4px;
      border-bottom-right-radius: 4px;
      color: #fff;
      background-color: #6CD9AA;
      font-size: 10px;
    }

    .jump_title_text{
      display: block;
      font-size: 20px;
      font-weight: 600;
      color: rgba(5, 152, 220, 0.8);
    }
    .jump_desc_text{
      display: block;
      font-size: 16px;
      color: rgba(5, 152, 220, 0.8);
    } 
  
  .image_view{
    display: flex;
    flex: 2;
    height: 100%;
    line-height: 80px;
  }
    .image_view image{
      margin: 10px;
      width: 60px;
      height: 60px;
      border-radius: 30px;
    }
